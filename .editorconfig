# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8

[*.html]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.coffee]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
